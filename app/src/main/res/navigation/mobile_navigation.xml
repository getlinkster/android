    app:startDestination="@+id/navigation_events">

    <fragment
        android:id="@+id/navigation_events"
        android:name="chain.link.linkster.ui.events.EventsFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/navigation_connections"
        android:name="chain.link.linkster.ui.connections.ConnectionsFragment"
        android:label="@string/title_connections"
